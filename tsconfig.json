{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@middleware/*": ["src/middleware/*"],
      "@pipe/*": ["src/pipe/*"],
      "@server/*": ["src/server/*"],
      "@filter/*": ["src/filter"],
      "@interceptor/*": ["src/interceptor"]
    } ,
    "incremental": true
  }
}
